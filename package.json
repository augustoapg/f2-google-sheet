{
  "name": "f2-shopping-list",
  "version": "1.0.0",
  "description": "populates spreadsheet with data from vendors such as ikea",
  "main": "dist/index.js",
  "scripts": {
    "start": "node --es-module-specifier-resolution=node dist/index.js",
    "build": "tsc && npm run copy-files",
    "dev": "nodemon --watch app --exec 'npm run build && npm run start'",
    "copy-files": "copyfiles -u 1 ./app/public/* dist/",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "type": "module",
  "author": "Augusto Peres (augustoapg@gmail.com)",
  "license": "ISC",
  "dependencies": {
    "@google-cloud/local-auth": "^2.1.0",
    "axios": "^1.5.1",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "googleapis": "^105.0.0",
    "node-fetch": "2.5.0",
    "node-html-parser": "^6.1.5",
    "sanitize-html": "^2.11.0",
    "ts-node": "^10.9.1"
  },
  "devDependencies": {
    "@flydotio/dockerfile": "latest",
    "@types/express": "^4.17.19",
    "@types/node": "^20.6.2",
    "@types/node-fetch": "^2.6.6",
    "@types/sanitize-html": "^2.9.1",
    "copyfiles": "^2.4.1",
    "nodemon": "^3.0.1",
    "typescript": "^5.2.2"
  }
